{
	"name": "pokedex",
	"version": "1.0.0",
	"description": "Pokedex App",
	"author": "Michaell Alavedra",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"format": "biome format --write .",
		"start": "ts-node -r tsconfig-paths/register src/main.ts",
		"start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
		"start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
		"start:prod": "node dist/main",
		"start:dev:firebase": "firebase serve --only functions",
		"deploy": "firebase deploy --only functions",
		"deploy:cloudrun": "bash deploy-cloud-run.sh",
		"lint": "biome lint .",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"gcp-build": "npm i npm-install-peers"
	},
	"dependencies": {
		"@nestjs/apollo": "^10.0.22",
		"@nestjs/axios": "^3.0.0",
		"@nestjs/common": "^9.0.0",
		"@nestjs/config": "^2.2.0",
		"@nestjs/core": "^9.0.0",
		"@nestjs/graphql": "^10.0.22",
		"@nestjs/mapped-types": "*",
		"@nestjs/platform-express": "^9.0.0",
		"apollo-server-express": "^3.10.2",
		"axios": "^1.13.4",
		"graphql": "^16.6.0",
		"graphql-tools": "^8.3.4",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.5.7"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^9.0.0",
		"@nestjs/testing": "^9.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "28.1.4",
		"@types/node": "^16.0.0",
		"@types/supertest": "^2.0.11",
		"firebase-functions-test": "^2.3.0",
		"jest": "28.1.2",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "28.0.5",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsc-watch": "^5.0.3",
		"tsconfig-paths": "4.0.0",
		"typescript": "^4.3.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"engines": {
		"node": "16"
	},
	"main": "dist/index.js"
}
